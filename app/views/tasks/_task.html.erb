<% if task.state == "doing" %>
<div class="panel panel-info">
  <div class="panel-heading">
    <%= link_to edit_task_path(task) do %>
      created <%= time_ago_in_words(task.created_at) %> ago
    <% end %>

    <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, task, method: :delete, data: { confirm: 'Are you sure?' }, class: "pull-right" %>
  </div>

  <div class="panel-body"><%= raw(task.content_html) %></div>

  <div class="panel-footer text-center">

    <div class="btn-group btn-group-justified">
      <%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "to_do"), method: :put, class: "btn btn-info btn-md btn-block" %>
      <%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "done"), method: :put, class: "btn btn-info btn-md btn-block" %>
    </div>
  </div>
</div>

<% elsif task.state == "done" %>
<div class="panel panel-success">
  <div class="panel-heading">
    <%= link_to edit_task_path(task) do %>
      created <%= time_ago_in_words(task.created_at) %> ago
    <% end %>

    <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, task, method: :delete, data: { confirm: 'Are you sure?' }, class: "pull-right" %>
  </div>

  <div class="panel-body"><%= raw(task.content_html) %></div>

  <div class="panel-footer text-center">

    <div class="btn-group btn-group-justified">
      <%= link_to "<i class='fa fa-arrow-left'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-success btn-md btn-block" %>
    </div>
  </div>
</div>

<% elsif task.state == "to_do" %>
<div class="panel panel-warning">
  <div class="panel-heading">
    <%= link_to edit_task_path(task) do %>
      created <%= time_ago_in_words(task.created_at) %> ago
    <% end %>

    <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, task, method: :delete, data: { confirm: 'Are you sure?' }, class: "pull-right" %>
  </div>

  <div class="panel-body"><%= raw(task.content_html) %></div>

  <div class="panel-footer text-center">

    <div class="btn-group btn-group-justified">
      <%= link_to "<i class='fa fa-arrow-right'></i>".html_safe, change_task_path(task, state: "doing"), method: :put, class: "btn btn-warning btn-md btn-block" %>
    </div>
  </div>
</div>
<% end %>